<% content_for :head do %>
<title><%= @action.title%></title>
<meta name ="<%= @action.description%>">
<%end%>
<div class="outerwrapper">
  <!-- =header -->
  
  <%= render 'header' %>
  <!-- =/header -->
  <!-- =floatcontacts -->
<div class="floatcontacts container">
    <div>
      <a href="tel:+375291111111" class="tel"><span>+7 (800) </span>775-76-81</a>
      <p class="skype"> Звонок бесплатный</p>
    </div>    
  </div>


  <!-- =/floatcontacts -->
  <!-- =/floatcontacts -->
  <div class="main">
    <div class="container">
      <div class="news">
        <h1>НОВОСТИ</h1>
        <div class="list row">
        <% @actions.each do |action| %>
          <article>
            <div class="col-md-4 col-sm-5 col-xs-12">
             <%= image_tag action.image.url(:medium) %>
            </div>
            <div class="description col-md-8 col-sm-7 col-xs-12">
              <h3><a href="#"><%=action.title%></a></h3>
              <div class="text">
              <p><%=action.text.slice(0, 1000)%></p>
                <div class="moretext">
                  <p> <%=action.text.slice(1000, action.text.length)%><p/>
              </div>
              </div>
              <div class="meta">
                <time datetime="22.10.2015"><%=action.date%></time>
                <a href="#" class="readmore">Читать полностью</a>
              </div>
            </div>
          </article>
           <% if current_user %>
        <% if "Admin".include? current_user.role %>
          <%= link_to 'Изменить', edit_action_path(action) %>
          <%= link_to 'Удалить',  action, method: :delete, data: { confirm: 'Вы уверены?' } %>
        <%end%>
      <%end%>
        <%end%>
        </div>
     <%= will_paginate @actions, previous_label: "&laquo;", next_label: "&raquo;", renderer: BootstrapPagination::Rails %>
<br>
<% if current_user %>
 <% if "Admin".include? current_user.role %>
  <%= link_to 'Добавить', new_action_path %>
 <%end%>
<%end%>
      </div>
    </div>
  </div>
    <!-- InstanceEndEditable -->  
    <!-- InstanceEndEditable -->  

</div>


