<p id="notice"><%= notice %></p>

<h1>Отзывы</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td>
          Имя
        </td>
      </tr>
      <tr>
        <td>
          <%= feedback.name %>
        </td>
      </tr>
      <tr>
        <td>
          Отзыв
        </td>
      </tr>
      <tr>
        <td>
          <%= feedback.feedback %>
        </td>
      </tr>
      <tr>
       <% if current_user %>
          <% if "Admin".include? current_user.role %>
            <td><%= link_to 'Изменить', edit_feedback_path(feedback) %></td>
            <td><%= link_to 'Удалить', feedback, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          <%end%>
        <%end%>  
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_feedback_path %>
