<% content_for :head do %>
<title><%= @service.title%></title>
<meta name ="<%= @service.description%>">
<%end%>
<div class="outerwrapper">
	<!-- =header -->
	
  <%= render 'welcome/header' %>
	<!-- =/header -->

	<!-- =floatcontacts -->
<div class="floatcontacts container">
    <div>
      <a href="tel:+78007757681" class="tel"><span>+7 (800) </span>775-76-81</a>
      <p class="skype"> Звонок бесплатный</p>
    </div>    
  </div>
	<!-- =/floatcontacts -->
	
	<!-- InstanceBeginEditable name="EditRegion3" -->
    
	<div class="main service_page">
		<div class="container">
			<h1>УСЛУГИ И ЦЕНЫ</h1>
			<div class="intro">
				<p>Уже более 15 лет наша компания предоставляет квалифицированную помощь в сфере образовательных услуг. У нас вы можете заказать практически все - от решения простых задач до тематических докладов и диссертаций любой степени сложности на нескольких основных языках. Мы смело можем сказать, что наш опыт позволяет выполнять работы оперативно, качественно и на высоком уровне.</p>
			</div>
			<div class="list">
			<% @worktypes.each do |w| %>
				<article>
          <a href="/worktypes/<%= w.id%>">
					<h2><%= w.name%> на заказ</h2></a>
					<div class="text">
						<p><%= w.descr%></p>
					</div>
					<div class="meta row">
						<div class="col-xs-4">
							<%=w.price%> <br>
							<%=w.terms%>
						</div>
						<div class="col-xs-8 text-right">
							<a href="#" class="to-qorder btn btn_green" data-toggle="modal" data-target="#modalorder">Узнать стоимость</a>
							<a href="/worktypes/<%= w.id%>" class="buy btn btn_red"><%= image_tag 'buy-2.png' %>Заказать</a>
						</div>
					</div>
				</article>	
			<%end%>		
			</div>
		</div>
	</div>

	<div class="line"></div>
    <!-- InstanceEndEditable -->	

<!-- =bottom -->
    <div class="bottom container">
    <div class="row">
      <div class="col-sm-4 col-xs-12">
        <div class="title">Новости</div>
        <div class="box" style="height: 420px;">
          <%= image_tag 'new.jpg', class: "img-responsive" %>
          <% if @news %>
            <div class="title_red"><a href="#"><%=@news.title%></a></div>
             <p><%=@news.text.slice(0, 300)%></p>
            <p class="date"><%=@news.created_at.to_s(:db)%></p>
          <%end%>
        </div>
        <a href="news" class="btn btn_green pull-right">Перейти к разделу</a>
      </div>
      <div class="col-sm-4 col-xs-12">
        <div class="title">вопрос / ответ</div>
        <div class="box" style="height: 420px;">
         <% if @question %>  
          <div class="title_red">Вопрос:</div>
          <p><%=@question.question%></p>
          <div class="title_green">Ответ: </div>
          <p><%=@question.answer%></p>
        <%end%>
         <% if @question1 %>  
          <div class="title_red">Вопрос:</div>
          <p><%=@question1.question%></p>
          <div class="title_green">Ответ: </div>
          <p><%=@question1.answer%></p>
        <%end%>
        </div>
        <a href="questions" class="btn btn_green pull-right">Перейти к разделу</a>
      </div>
      <div class="col-sm-4 col-xs-12">
        <div class="title">Отзывы</div>
        <div class="box" style="height: 420px;">
         <% if @feedback %> 
          <div class="title_red"><%=@feedback.name%></div>
          <p><%=@feedback.feedback%></p>
          <div class="date"><%=@feedback.created_at.to_s(:db)%></div>
          <%end%>
          <% if @feedback1 %> 
          <div class="title_red"><%=@feedback1.name%></div>
          <p><%=@feedback1.feedback%></p>
          <div class="date"><%=@feedback1.created_at.to_s(:db)%></div>
          <%end%>
        </div>
        <a href="feedbacks" class="btn btn_green pull-right">Перейти к разделу</a>
      </div>
    </div>
  </div>
  <!-- =/bottom -->
</div>
 <%= render 'welcome/footer' %>