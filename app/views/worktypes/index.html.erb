<%= render "dashboard/#{current_user.role.downcase}/header" %>
<div class="page-header">
  <h2 class="text-center">Типы работ</h2>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @worktypes.each do |worktype| %>
      <tr>
        <td><%= worktype.name %></td>
        <td><%= link_to 'Редактировать', edit_worktype_path(worktype) %></td>
        <td><%= link_to 'Удалить', worktype, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Добавить тип работы', new_worktype_path, class: 'btn btn-primary' %>
