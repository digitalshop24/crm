<% content_for :head do %>
  <script type="text/javascript">
    <%= raw render "events_sub" %>
  </script>
<% end %>
<%= render "dashboard/#{current_user.role.downcase}/header" %>
<p id="notice"><%= notice %></p>
<h1 style ="text-align: center">События</h1>
<table class="table table-hover" id="events">
  <thead>
    <tr class="info">
      <th>id</th>
      <th>Описание</th>
      <th>Дата и время</th>
      <th colspan="2">Ссылка</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= "Пользователь #{event.user.name} оставил #{event.event_type} \"#{event.content}\" " %></td>
        <td><%= event.created_at.to_s(:db) %></td>
        <td>
          <%= link_to("Посмотреть", "#{event.link}") %><br/>
          <span aria-hidden="true">
            <%= link_to "", event, method: :delete, data: { confirm: 'Вы уверены' }, class: "glyphicon glyphicon-remove"  %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
