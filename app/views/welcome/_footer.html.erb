<!-- =Modal -->
<div class="modal fade" id="modalorder" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><%= image_tag 'close.png'%></button>
      <div class="modal-body center-block">
        <form action="/getprice" method="get" class="form">
          <fieldset>
            <div class="form-group">
              <input type="text" class="form-control" name="type" value="" placeholder="Тип работы" />
            </div>
            <div class="form-group">
              <input type="tel" class="form-control" name="tel" value="+" placeholder="Телефон" />
            </div>
            <div class="form-group">
              <input type="submit" class="submit btn btn_red" value="Отправить заявку" />
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
