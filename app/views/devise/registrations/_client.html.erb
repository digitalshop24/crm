<div class="row">
  <div class="form-group col-md-4">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control', placeholder: 'ФИО' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-4 required">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, required: true, class: 'form-control mobile-phone', placeholder: 'Контактный телефон' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-4">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: 'form-control', placeholder: 'Город' %>
  </div>
</div>
