<% role = resource.role.downcase %>
<%= render "dashboard/#{role}/header" %>
<div class="container">
    <% if ["client", "employee"].include?(role) %>
      <%= render partial: "dashboard/#{role}/nav_tabs_links", locals: { active: 'profile' } %>
    <% end %>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= render partial: role, locals: { f: f } %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Контактный email' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Ожидается подтверждение e-mail: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
      <%= f.label :password %> <i>(оставьте поле пустым, если не хотите менять пароль)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Пароль' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Подтверждение пароля' %>
    </div>
    <div class="form-group">
      <%= f.label :current_password %> <i>(введите текущий пароль, чтобы подтвердить изменения)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Текущий пароль' %>
    </div>
    <%= f.button "Сохранить", class: 'btn btn-primary' %>
  <% end %>
</div>

