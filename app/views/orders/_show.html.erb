<% display_attributes = [:worktype, :worktype_other, :speciality, :speciality_other, 
  :institution, :theme, :uniqueness, :comment, :deadline, :page_number] %>
<% display_attributes.each do |attr| %>
  <% unless @order.send(attr).to_s.empty? %>
    <p>
      <strong><%= t "activerecord.attributes.order.#{attr}" %>:</strong>
      <%= @order.send(attr).to_s %>
    </p>
  <% end %>
<% end %>
<% if @order.document? %>
  <p>
    <strong><%= t "activerecord.attributes.order.document" %>:</strong>
    <%= link_to @order.document_file_name, @order.document.url  %>
  </p>
<% end %>
