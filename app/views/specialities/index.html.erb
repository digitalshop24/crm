<%= render "dashboard/#{current_user.role.downcase}/header" %>
<div class="page-header">
  <h2 class="text-center">Специальности</h2>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @specialities.each do |speciality| %>
      <tr>
        <td><%= speciality.name %></td>
        <td><%= link_to 'Редактировать', edit_speciality_path(speciality) %></td>
        <td><%= link_to 'Удалить', speciality, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <td><%= link_to 'Добавить подспециальность', new_speciality_subspeciality_path(speciality) %></td>
      </tr>
       <% speciality.subspecialities.each do |subspeciality| %>
      <tr>
        <td style="padding-left:50px;"><%= subspeciality.subspeciality %></td>
        <td><%= link_to 'Редактировать', edit_speciality_subspeciality_path(id: subspeciality.id, speciality_id: speciality.id) %></td>
        <td><%= link_to 'Удалить', speciality_subspeciality_path(id: subspeciality.id, speciality_id: speciality.id), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <td></td>
      </tr>  
      <%end%>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Добавить специальность', new_speciality_path, class: 'btn btn-primary' %>
